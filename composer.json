{
	"name": "cpsit/quality-tools",
	"description": "A collection of tools for quality assurance in TYPO3 projects.",
	"license": "GPL-3.0-or-later",
	"homepage": "https://github.com/CPS-IT/quality-tools",
	"require": {
		"php": "^8.3",
		"a9f/typo3-fractor": "~0.5.1",
		"armin/editorconfig-cli": "^2.0",
		"ergebnis/composer-normalize": "^2.45",
		"helmich/typo3-typoscript-lint": "^3.3",
		"justinrainbow/json-schema": "^5.2",
		"phpstan/phpstan": "^2.1",
		"phpunit/php-code-coverage": "^11.0",
		"ssch/typo3-rector": "^3.5",
		"symfony/config": "^6.0 || ^7.0",
		"symfony/console": "^6.0 || ^7.0",
		"symfony/process": "^6.0 || ^7.0",
		"symfony/yaml": "^6.0 || ^7.0",
		"typo3/coding-standards": "^0.8.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^11.0"
	},
	"autoload": {
		"psr-4": {
			"Cpsit\\QualityTools\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Cpsit\\QualityTools\\Tests\\": "tests/"
		}
	},
	"bin": [
		"bin/qt"
	],
	"config": {
		"allow-plugins": {
			"a9f/fractor-extension-installer": true,
			"ergebnis/composer-normalize": true,
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		}
	},
	"scripts": {
		"test": "vendor/bin/phpunit",
		"test:coverage": "vendor/bin/phpunit --coverage-html .build/coverage/html --coverage-text",
		"test:coverage-clover": "vendor/bin/phpunit --coverage-clover .build/coverage/clover.xml",
		"test:integration": "vendor/bin/phpunit --testsuite Integration",
		"test:unit": "vendor/bin/phpunit --testsuite Unit"
	}
}
